<!-- Create Employee -->
<div class="mb-4">
    <a href="/employees" class="btn btn-outline-secondary btn-sm">
        <i class="bi bi-arrow-left me-1"></i>Back to Employees
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-success text-white py-3">
                <h5 class="mb-0"><i class="bi bi-person-plus me-2"></i>Add New Employee</h5>
            </div>
            <div class="card-body p-4">
                <form action="/employees" method="POST">
                    <!-- Personal Information -->
                    <h6 class="text-uppercase text-muted fw-bold mb-3">
                        <i class="bi bi-person me-1"></i>Personal Information
                    </h6>
                    <div class="row mb-4">
                        <div class="col-md-6 mb-3">
                            <label for="firstName" class="form-label fw-semibold">First Name <span
                                    class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="firstName" name="firstName" required
                                maxlength="50" placeholder="John">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="lastName" class="form-label fw-semibold">Last Name <span
                                    class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="lastName" name="lastName" required
                                maxlength="50" placeholder="Doe">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="email" class="form-label fw-semibold">Email <span
                                    class="text-danger">*</span></label>
                            <input type="email" class="form-control" id="email" name="email" required
                                placeholder="john.doe@example.com">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="phone" class="form-label fw-semibold">Phone</label>
                            <input type="tel" class="form-control" id="phone" name="phone" maxlength="20"
                                placeholder="+1 234 567 8900">
                        </div>
                    </div>

                    <!-- Job Information -->
                    <h6 class="text-uppercase text-muted fw-bold mb-3">
                        <i class="bi bi-briefcase me-1"></i>Job Information
                    </h6>
                    <div class="row mb-4">
                        <div class="col-md-6 mb-3">
                            <label for="jobTitle" class="form-label fw-semibold">Job Title <span
                                    class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="jobTitle" name="jobTitle" required
                                maxlength="100" placeholder="Software Engineer">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="department" class="form-label fw-semibold">Department <span
                                    class="text-danger">*</span></label>
                            <select class="form-select" id="department" name="department" required>
                                <option value="">Select Department</option>
                                <% departments.forEach(dept=> { %>
                                    <option value="<%= dept._id %>">
                                        <%= dept.name %>
                                    </option>
                                    <% }) %>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="supervisor" class="form-label fw-semibold">Supervisor</label>
                            <select class="form-select" id="supervisor" name="supervisor">
                                <option value="">No Supervisor</option>
                                <% supervisors.forEach(sup=> { %>
                                    <option value="<%= sup._id %>">
                                        <%= sup.firstName %>
                                            <%= sup.lastName %>
                                    </option>
                                    <% }) %>
                            </select>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label for="salary" class="form-label fw-semibold">Salary</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input type="number" class="form-control" id="salary" name="salary" min="0" step="0.01"
                                    placeholder="50000">
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label for="hireDate" class="form-label fw-semibold">Hire Date</label>
                            <input type="date" class="form-control" id="hireDate" name="hireDate">
                        </div>
                    </div>

                    <!-- Location Information -->
                    <h6 class="text-uppercase text-muted fw-bold mb-3">
                        <i class="bi bi-geo-alt me-1"></i>Location Information
                    </h6>
                    <div class="row mb-4">
                        <div class="col-md-4 mb-3">
                            <label for="country" class="form-label fw-semibold">Country</label>
                            <select class="form-select" id="country" name="country">
                                <option value="">Select Country</option>
                            </select>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="state" class="form-label fw-semibold">State</label>
                            <select class="form-select" id="state" name="state" disabled>
                                <option value="">Select State</option>
                            </select>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="city" class="form-label fw-semibold">City</label>
                            <select class="form-select" id="city" name="city" disabled>
                                <option value="">Select City</option>
                            </select>
                        </div>
                        <div class="col-12 mb-3">
                            <label for="address" class="form-label fw-semibold">Address</label>
                            <textarea class="form-control" id="address" name="address" rows="2" maxlength="300"
                                placeholder="123 Main Street, Apt 4B"></textarea>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="bi bi-person-check me-2"></i>Add Employee
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    // Initialize location dropdowns on page load
    document.addEventListener('DOMContentLoaded', function () {
        loadCountries();
    });
</script>