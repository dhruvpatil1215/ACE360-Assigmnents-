<!-- Departments List -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-6 fw-bold text-primary mb-0">
        <i class="bi bi-diagram-3 me-2"></i>Departments
    </h1>
    <a href="/departments/create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-2"></i>Add Department
    </a>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body p-0">
        <% if (departments.length> 0) { %>
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 30%">Name</th>
                            <th style="width: 50%">Description</th>
                            <th style="width: 20%" class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% departments.forEach(dept=> { %>
                            <tr>
                                <td>
                                    <i class="bi bi-folder me-2 text-primary"></i>
                                    <strong>
                                        <%= dept.name %>
                                    </strong>
                                </td>
                                <td class="text-muted">
                                    <%= dept.description || 'No description' %>
                                </td>
                                <td class="text-end">
                                    <div class="btn-group" role="group">
                                        <a href="/departments/<%= dept._id %>" class="btn btn-sm btn-outline-info"
                                            title="View">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a href="/departments/<%= dept._id %>/edit"
                                            class="btn btn-sm btn-outline-warning" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form action="/departments/<%= dept._id %>?_method=DELETE" method="POST"
                                            class="d-inline"
                                            onsubmit="return confirm('Are you sure you want to delete this department?')">
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
            <% } else { %>
                <div class="text-center py-5">
                    <i class="bi bi-folder-x text-muted fs-1"></i>
                    <p class="text-muted mt-2 mb-3">No departments found</p>
                    <a href="/departments/create" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-2"></i>Create First Department
                    </a>
                </div>
                <% } %>
    </div>
</div>