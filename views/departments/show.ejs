<!-- Department Details -->
<div class="mb-4">
    <a href="/departments" class="btn btn-outline-secondary btn-sm">
        <i class="bi bi-arrow-left me-1"></i>Back to Departments
    </a>
</div>

<div class="row">
    <div class="col-lg-4 mb-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-primary text-white py-3">
                <h5 class="mb-0"><i class="bi bi-folder me-2"></i>Department Info</h5>
            </div>
            <div class="card-body">
                <h3 class="fw-bold">
                    <%= department.name %>
                </h3>
                <p class="text-muted">
                    <%= department.description || 'No description provided' %>
                </p>

                <hr>

                <div class="d-flex justify-content-between text-muted small">
                    <span>Created:</span>
                    <span>
                        <%= new Date(department.createdAt).toLocaleDateString() %>
                    </span>
                </div>
                <div class="d-flex justify-content-between text-muted small mt-1">
                    <span>Last Updated:</span>
                    <span>
                        <%= new Date(department.updatedAt).toLocaleDateString() %>
                    </span>
                </div>

                <hr>

                <div class="d-grid gap-2">
                    <a href="/departments/<%= department._id %>/edit" class="btn btn-outline-warning">
                        <i class="bi bi-pencil me-2"></i>Edit Department
                    </a>
                    <form action="/departments/<%= department._id %>?_method=DELETE" method="POST"
                        onsubmit="return confirm('Are you sure you want to delete this department?')">
                        <button type="submit" class="btn btn-outline-danger w-100">
                            <i class="bi bi-trash me-2"></i>Delete Department
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-people me-2"></i>Employees in Department (<%= employees.length %>)</h5>
                <a href="/employees/create" class="btn btn-sm btn-primary">
                    <i class="bi bi-plus me-1"></i>Add Employee
                </a>
            </div>
            <div class="card-body p-0">
                <% if (employees.length> 0) { %>
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Name</th>
                                    <th>Job Title</th>
                                    <th>Supervisor</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% employees.forEach(emp=> { %>
                                    <tr>
                                        <td>
                                            <i class="bi bi-person-circle me-2 text-muted"></i>
                                            <%= emp.fullName %>
                                        </td>
                                        <td>
                                            <%= emp.jobTitle %>
                                        </td>
                                        <td>
                                            <% if (emp.supervisor) { %>
                                                <%= emp.supervisor.firstName %>
                                                    <%= emp.supervisor.lastName %>
                                                        <% } else { %>
                                                            <span class="text-muted">None</span>
                                                            <% } %>
                                        </td>
                                        <td>
                                            <a href="/employees/<%= emp._id %>" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                    <% } else { %>
                        <div class="text-center py-5">
                            <i class="bi bi-people text-muted fs-1"></i>
                            <p class="text-muted mt-2">No employees in this department</p>
                        </div>
                        <% } %>
            </div>
        </div>
    </div>
</div>