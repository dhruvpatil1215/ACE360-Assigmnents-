<!-- Employee Details -->
<div class="mb-4">
    <a href="/employees" class="btn btn-outline-secondary btn-sm">
        <i class="bi bi-arrow-left me-1"></i>Back to Employees
    </a>
</div>

<div class="row">
    <!-- Employee Info Card -->
    <div class="col-lg-4 mb-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-4">
                <div class="avatar-circle-lg bg-primary text-white mx-auto mb-3">
                    <%= employee.firstName.charAt(0) %>
                        <%= employee.lastName.charAt(0) %>
                </div>
                <h3 class="fw-bold mb-1">
                    <%= employee.fullName %>
                </h3>
                <p class="text-muted mb-2">
                    <%= employee.jobTitle %>
                </p>
                <span class="badge bg-primary mb-3">
                    <%= employee.department?.name || 'No Department' %>
                </span>

                <div class="d-flex justify-content-center gap-2">
                    <a href="/employees/<%= employee._id %>/edit" class="btn btn-outline-warning">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <form action="/employees/<%= employee._id %>?_method=DELETE" method="POST" class="d-inline"
                        onsubmit="return confirm('Are you sure you want to delete this employee?')">
                        <button type="submit" class="btn btn-outline-danger">
                            <i class="bi bi-trash"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Supervisor Card -->
        <% if (employee.supervisor) { %>
            <div class="card border-0 shadow-sm mt-4">
                <div class="card-header bg-white py-3">
                    <h6 class="mb-0 fw-bold"><i class="bi bi-person-badge me-2"></i>Supervisor</h6>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="avatar-circle bg-secondary text-white me-3">
                            <%= employee.supervisor.firstName.charAt(0) %>
                                <%= employee.supervisor.lastName.charAt(0) %>
                        </div>
                        <div>
                            <strong>
                                <%= employee.supervisor.firstName %>
                                    <%= employee.supervisor.lastName %>
                            </strong>
                            <br><small class="text-muted">
                                <%= employee.supervisor.email %>
                            </small>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
    </div>

    <!-- Details Cards -->
    <div class="col-lg-8">
        <!-- Contact & Job Details -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0 fw-bold"><i class="bi bi-info-circle me-2"></i>Employee Details</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6 class="text-uppercase text-muted small mb-3">Contact Information</h6>
                        <div class="mb-3">
                            <i class="bi bi-envelope me-2 text-primary"></i>
                            <a href="mailto:<%= employee.email %>">
                                <%= employee.email %>
                            </a>
                        </div>
                        <% if (employee.phone) { %>
                            <div class="mb-3">
                                <i class="bi bi-telephone me-2 text-primary"></i>
                                <a href="tel:<%= employee.phone %>">
                                    <%= employee.phone %>
                                </a>
                            </div>
                            <% } %>
                                <% if (employee.address) { %>
                                    <div class="mb-3">
                                        <i class="bi bi-geo-alt me-2 text-primary"></i>
                                        <%= employee.address %>
                                    </div>
                                    <% } %>
                    </div>
                    <div class="col-md-6">
                        <h6 class="text-uppercase text-muted small mb-3">Job Information</h6>
                        <div class="mb-2 d-flex justify-content-between">
                            <span class="text-muted">Department:</span>
                            <span class="badge bg-primary">
                                <%= employee.department?.name || 'N/A' %>
                            </span>
                        </div>
                        <div class="mb-2 d-flex justify-content-between">
                            <span class="text-muted">Job Title:</span>
                            <strong>
                                <%= employee.jobTitle %>
                            </strong>
                        </div>
                        <% if (employee.salary) { %>
                            <div class="mb-2 d-flex justify-content-between">
                                <span class="text-muted">Salary:</span>
                                <strong>$<%= employee.salary.toLocaleString() %></strong>
                            </div>
                            <% } %>
                                <% if (employee.hireDate) { %>
                                    <div class="mb-2 d-flex justify-content-between">
                                        <span class="text-muted">Hire Date:</span>
                                        <strong>
                                            <%= new Date(employee.hireDate).toLocaleDateString() %>
                                        </strong>
                                    </div>
                                    <% } %>
                    </div>
                </div>

                <% if (employee.country || employee.state || employee.city) { %>
                    <hr>
                    <h6 class="text-uppercase text-muted small mb-3">Location</h6>
                    <div class="d-flex gap-2">
                        <% if (employee.country) { %>
                            <span class="badge bg-light text-dark"><i class="bi bi-globe me-1"></i>
                                <%= employee.country %>
                            </span>
                            <% } %>
                                <% if (employee.state) { %>
                                    <span class="badge bg-light text-dark"><i class="bi bi-map me-1"></i>
                                        <%= employee.state %>
                                    </span>
                                    <% } %>
                                        <% if (employee.city) { %>
                                            <span class="badge bg-light text-dark"><i class="bi bi-building me-1"></i>
                                                <%= employee.city %>
                                            </span>
                                            <% } %>
                    </div>
                    <% } %>
            </div>
        </div>

        <!-- Subordinates -->
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0 fw-bold"><i class="bi bi-people me-2"></i>Subordinates (<%= subordinates.length %>)</h5>
            </div>
            <div class="card-body p-0">
                <% if (subordinates.length> 0) { %>
                    <ul class="list-group list-group-flush">
                        <% subordinates.forEach(sub=> { %>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <i class="bi bi-person me-2 text-muted"></i>
                                    <strong>
                                        <%= sub.firstName %>
                                            <%= sub.lastName %>
                                    </strong>
                                    <span class="text-muted ms-2">- <%= sub.jobTitle %></span>
                                </div>
                                <a href="/employees/<%= sub._id %>" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye"></i>
                                </a>
                            </li>
                            <% }) %>
                    </ul>
                    <% } else { %>
                        <div class="text-center py-4">
                            <i class="bi bi-people text-muted fs-3"></i>
                            <p class="text-muted mt-2 mb-0">No subordinates</p>
                        </div>
                        <% } %>
            </div>
        </div>
    </div>
</div>