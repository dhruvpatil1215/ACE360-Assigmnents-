<!-- Edit Employee -->
<div class="mb-4">
    <a href="/employees" class="btn btn-outline-secondary btn-sm">
        <i class="bi bi-arrow-left me-1"></i>Back to Employees
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-warning py-3">
                <h5 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Edit Employee: <%= employee.fullName %>
                </h5>
            </div>
            <div class="card-body p-4">
                <form action="/employees/<%= employee._id %>?_method=PUT" method="POST">
                    <!-- Personal Information -->
                    <h6 class="text-uppercase text-muted fw-bold mb-3">
                        <i class="bi bi-person me-1"></i>Personal Information
                    </h6>
                    <div class="row mb-4">
                        <div class="col-md-6 mb-3">
                            <label for="firstName" class="form-label fw-semibold">First Name <span
                                    class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="firstName" name="firstName"
                                value="<%= employee.firstName %>" required maxlength="50">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="lastName" class="form-label fw-semibold">Last Name <span
                                    class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="lastName" name="lastName"
                                value="<%= employee.lastName %>" required maxlength="50">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="email" class="form-label fw-semibold">Email <span
                                    class="text-danger">*</span></label>
                            <input type="email" class="form-control" id="email" name="email"
                                value="<%= employee.email %>" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="phone" class="form-label fw-semibold">Phone</label>
                            <input type="tel" class="form-control" id="phone" name="phone"
                                value="<%= employee.phone || '' %>" maxlength="20">
                        </div>
                    </div>

                    <!-- Job Information -->
                    <h6 class="text-uppercase text-muted fw-bold mb-3">
                        <i class="bi bi-briefcase me-1"></i>Job Information
                    </h6>
                    <div class="row mb-4">
                        <div class="col-md-6 mb-3">
                            <label for="jobTitle" class="form-label fw-semibold">Job Title <span
                                    class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="jobTitle" name="jobTitle"
                                value="<%= employee.jobTitle %>" required maxlength="100">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="department" class="form-label fw-semibold">Department <span
                                    class="text-danger">*</span></label>
                            <select class="form-select" id="department" name="department" required>
                                <option value="">Select Department</option>
                                <% departments.forEach(dept=> { %>
                                    <option value="<%= dept._id %>" <%=employee.department &&
                                        employee.department.toString()===dept._id.toString() ? 'selected' : '' %>><%=
                                            dept.name %>
                                    </option>
                                    <% }) %>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="supervisor" class="form-label fw-semibold">Supervisor</label>
                            <select class="form-select" id="supervisor" name="supervisor">
                                <option value="">No Supervisor</option>
                                <% supervisors.forEach(sup=> { %>
                                    <option value="<%= sup._id %>" <%=employee.supervisor &&
                                        employee.supervisor.toString()===sup._id.toString() ? 'selected' : '' %>><%=
                                            sup.firstName %>
                                            <%= sup.lastName %>
                                    </option>
                                    <% }) %>
                            </select>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label for="salary" class="form-label fw-semibold">Salary</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input type="number" class="form-control" id="salary" name="salary"
                                    value="<%= employee.salary || '' %>" min="0" step="0.01">
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label for="hireDate" class="form-label fw-semibold">Hire Date</label>
                            <input type="date" class="form-control" id="hireDate" name="hireDate"
                                value="<%= employee.hireDate ? new Date(employee.hireDate).toISOString().split('T')[0] : '' %>">
                        </div>
                    </div>

                    <!-- Location Information -->
                    <h6 class="text-uppercase text-muted fw-bold mb-3">
                        <i class="bi bi-geo-alt me-1"></i>Location Information
                    </h6>
                    <div class="row mb-4">
                        <div class="col-md-4 mb-3">
                            <label for="country" class="form-label fw-semibold">Country</label>
                            <select class="form-select" id="country" name="country"
                                data-current="<%= employee.country || '' %>">
                                <option value="">Select Country</option>
                            </select>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="state" class="form-label fw-semibold">State</label>
                            <select class="form-select" id="state" name="state"
                                data-current="<%= employee.state || '' %>" disabled>
                                <option value="">Select State</option>
                            </select>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="city" class="form-label fw-semibold">City</label>
                            <select class="form-select" id="city" name="city" data-current="<%= employee.city || '' %>"
                                disabled>
                                <option value="">Select City</option>
                            </select>
                        </div>
                        <div class="col-12 mb-3">
                            <label for="address" class="form-label fw-semibold">Address</label>
                            <textarea class="form-control" id="address" name="address" rows="2"
                                maxlength="300"><%= employee.address || '' %></textarea>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-warning btn-lg">
                            <i class="bi bi-check-circle me-2"></i>Update Employee
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    // Initialize location dropdowns on page load
    document.addEventListener('DOMContentLoaded', function () {
        loadCountries(true);
    });
</script>